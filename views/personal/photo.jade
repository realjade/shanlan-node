extends ../share/layout
block css
    link(rel='stylesheet', href='#{staticFilter("//static.mgcheng.com/static/css/merge/personal_photo.merge.css")}')
block header
    div.mod-personal-header-wrap
        include ../share/header
        include ../share/personalHeader
block content
    div.mod-personal-photo
        div.header
            button.tag.active#album 相册
            button.tag#photo 照片库
            button#uploadphoto-btn.button.button-flat-primary 上传照片
            a#newalbum-btn.button.button-flat.button-flat-primary(href='/personal/photosetting/') 新建相册
        div.body
            div.block-g
                div.title 自建作品集
                if(data)
                    each collect, index in data
                        div.item
                            div.photo-wrap.ui-pg1(id="#{collect.id}")
                                img(src="#{collect.coverPath.replace('_X_X','_THUMBNAIL_600_600')}")
                            a.name 《#{collect.name}》
                            div.modify-btn(id="#{collect.id}")
                            div.delete-btn



block js
    script(src='#{staticFilter("//static.mgcheng.com/static/js/merge/personal_photo.merge.js")}')

