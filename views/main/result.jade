extends ../share/layout
block css
    link(rel='stylesheet', href='#{staticFilter("//static.jspass.com/static/css/merge/main_result.merge.css")}')
block header
    include ../share/header
block content
    div.mod-result
        div.search-items-wrap
            form.search-items-form(method="post" action="")
                div.search-item-block#search-display
                    div.search-item-desc 查询内容：
                    button.ui-twistbutton.ui-tb-left.ui-tb-active#search-person 摄影师
                    button.ui-twistbutton.ui-tb-right#search-service  服务
                div.search-item-block
                    div.search-item-desc 摄影类型：
                    select.ui-select#select-type
                        option(value='0') 旅拍
                        option(value='1') 婚纱
                        option(value='2') 婚礼跟拍
                div.search-item-block
                    div.search-item-desc 摄影风格：
                    select.ui-select.ui-sl-long#select-style
                        option(value='0') 胶片
                div.search-item-block
                    div.search-item-desc 拍摄地：
                    select.ui-select.ui-sl-long#select-location
                        option(value='0') 省份 - 城市
                div.search-item-block
                    div.search-item-desc 价格区间 (元)：
                    input.ui-input#input-price-1
                    span &nbsp~&nbsp
                    input.ui-input#input-price-2
                div.search-item-block#search-submit
                    div.ui-button-wrap
                        button.ui-roundbutton.ui-rb-search.submit-btn(type="submit" value='提交')


        div.result-rule-bar
            div.cell-space.rule-desc 显示顺序 >
            div.cell-space.rule-item
                a#compr-rule 综合排序
            div.cell-space.rule-item#rule-item-active
                a#score-rule 用户评价
            div.cell-space.rule-item
                a#price-rule 服务价格
            div.cell-space.rule-item
                a#trade-rule 交易次数
            div.cell-space.rule-item
                a#photo-rule 作品量

        div.result-item-box.result-item-box-person
            div.item-info-wrap
                div.item-avatar
                    img(src='//static.jspass.com/static/css/profile/images/avatar.jpg')
                div.item-name 王五十三
                div.item-city 重庆
                div.item-score
                    img(src="//static.jspass.com/static/css/profile/images/5stars.png")
                    div (4.9)
                div.item-collections 作品集: 41
                div.item-trades 交易数: 135
                div.item-tags
                    div.tag 婚纱
                    div.tag 婚礼跟拍
                    div.tag 写真
                    div.tag 商业
                div.item-description
                    div.quote-left-icon
                    span.detail 多年以后翻开照片，看到的不止是年轻时候的美丽，也可以看到当时的真情流露。真实与美丽，一样都不能舍弃。
                    div.quote-right-icon
            ul.item-packages-wrap
                li.item-package
                    div.pack-name 套系A:
                    div.pack-photo-num 255张
                    div.pack-time 1天
                    div.pack-price 12800
                li.item-package
                    div.pack-name 套系B:
                    div.pack-photo-num 25张
                    div.pack-time 2小时
                    div.pack-price 1280
            div.item-groups-wrap
                div.groups-list-a
                    a.g-block-a.first
                        img(src='//static.jspass.com/static/css/profile/images/trade-2-1.png')
                    a.g-block-a
                        img(src='//static.jspass.com/static/css/profile/images/trade-2-2.png')
                    a.g-block-a
                        img(src='//static.jspass.com/static/css/profile/images/trade-2-3.png')

        div.result-item-box.result-item-box-service
            div.item-package-wrap
                ul
                    li#pack-main-info
                        div.pack-name 高级定制团队写真
                        div.pack-tags
                            div.tag 写真
                            div.tag 胶片
                        div.pack-price
                            span 2000
                            span.pack-price-unit 元
                    li#pack-overview
                        div.pack-icon.pack-icon-words.pack-location 广州
                        div.pack-icon.pack-icon-words.pack-time 1天
                        div.pack-icon.pack-icon-words.pack-photo-num 500张
                        div.pack-icon.pack-icon-words.pack-ps-yes 20张
                        div.pack-icon.pack-print-yes
                        div.pack-icon.pack-album-yes
                        div.pack-icon.pack-costume-yes
                        div.pack-icon.pack-makeup-yes


            div.item-person-wrap
                div.person-avatar
                    img(src='//static.jspass.com/static/css/profile/images/avatar.jpg')
                div.person-name 叶树
                div.person-city (广州)
                div.person-collections 作品集:41
                div.person-trade 交易数:135
                div.person-score
                    img(src="//static.jspass.com/static/css/profile/images/5stars.png")
                    div (4.9)


            div.item-groups-wrap
                div.main-item-group
                    a.item
                        img(src='//static.jspass.com/static/css/profile/images/trade-1-0.png')
                    a.item
                        img(src='//static.jspass.com/static/css/profile/images/trade-1-1.png')
                    a.item
                        img(src='//static.jspass.com/static/css/profile/images/trade-1-2.png')
                    a.item
                        img(src='//static.jspass.com/static/css/profile/images/trade-1-3.png')
                    a.item
                        img(src='//static.jspass.com/static/css/profile/images/trade-1-4.png')
                    a.item
                        img(src='//static.jspass.com/static/css/profile/images/trade-1-5.png')
                    a.item
                        img(src='//static.jspass.com/static/css/profile/images/trade-1-6.png')


        div.page-index-wrap
            a.page-arrow-left
            a.page-index 1
            div.page-dots ...
            a.page-index 11
            a.page-index 12
            a.page-index#current-page-index 13
            a.page-index 14
            a.page-index 15
            div.page-dots ...
            a.page-index 30
            a.page-arrow-right



block footer
    include ../share/footer
block js
    script(src='#{staticFilter("//static.jspass.com/static/js/merge/main_home.merge.js")}')