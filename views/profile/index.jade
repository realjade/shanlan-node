extends ../share/layout
block css
    link(rel='stylesheet', href='#{staticFilter("//static.iyixiang.cn/static/css/merge/login.merge.css")}')
block header
    include ../share/outerheader
block content
    div.mod-login
        div.login-bg
        div.region
            form.mod-form(method="post" action="/login")
                if error
                    div.form-error(style="display:block;") !{error}
                else
                    div.form-error !{error}
                div.form-item
                    input.input-item(type="text" placeholder ="常用邮箱/用户名" name="email" tabindex="1")
                div.form-item
                    input.input-item(type="password" placeholder="密码" name="password" tabindex="2")
                div.form-item
                    button.login-btn.button.button-rounded.button-flat-primary(type="submit") 立即登录
                div.form-item.clr
                    a.f-l(href="/forget") &lt;&lt;忘记密码
                    a.register-btn.f-r(href="/register") 注册账号&gt;&gt;
block js
    script(src='#{staticFilter("//static.iyixiang.cn/static/js/merge/login.merge.js")}')