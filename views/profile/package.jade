extends ../share/layout
block css
    link(rel='stylesheet', href='#{staticFilter("//static.jspass.com/static/css/merge/profile_package.merge.css")}')
block header
    div.mod-profile-header-wrap
        include ../share/header
        include ../share/profileHeader
block content
    div.mod-package
        div.pack-wrap
            div.pack-type-wrap
                div.pack-type.type-focus 生 活
                div.middle-line
                div.pack-type 集 体
                div.middle-line
                div.pack-type 活 动
                div.middle-line
                div.pack-type 亲 子
            //div.pack-type-wrap
            //    div.pack-type 婚纱摄影
            //    div.middle-line
            //    div.pack-type 婚礼纪实
            //    div.middle-line
            //    div.pack-type 旅行跟拍
            //    div.middle-line
            //    div.pack-type 商业合作
            div.pack-list
                each item, index in packages
                    div.pack-block(data-id="#{item.id}")
                        div.pack-no #{index + 1}
                        div.pack-head-wrap
                            div.pack-name #{item.name}
                            div.pack-photo-num #{item.photoCount}张
                            div.pack-time #{item.days}天
                        div.pack-price #{item.price}
                        div.pack-detail
                            | !{item.description}
                        div.pack-select-btn.button.button-primary.button-rounded 选择
        div.order-wrap
            div.calendar-main
                include ../module/calendar

            div.booking-box
                div.bk-info
                    div.bk-pack
                        ul
                            span.bk-tag 套系：
                            span.bk-pack-name 高级定制团队个人写真 （12800元）
                        ul
                            span.bk-tag 日期：
                            span.bk-date 2014-10-05 周日

                        ul
                            span.bk-tag 备注：
                            div.bk-note-container
                                textarea.bk-note
                div.bk-btn
                    span 预 订

            div.reminding-wrap
                p.
                    * 建议您预订前先与摄影师沟通，确认具体时间和地点。<br/>
                    * 建议您完善基本信息并建立相册，以便摄影师更好地了解您。
block js
    script(src='#{staticFilter("//static.jspass.com/static/js/merge/profile_package.merge.js")}')