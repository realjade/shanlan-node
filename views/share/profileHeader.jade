div.mod-profile-header
    if owner.backPath
        div.profile-bg(style="background-image:url('#{owner.backPPath.replace('_X_X', '_COMPRESS_')}')")
    else
        div.profile-bg(style="background-color:#fff")
    div.user-info.clr
        div.f-l
            img.avatar-img(src="#{owner.avatar['200']}")
        div.user-detail.f-l
            div.user-title
                span#user-name #{owner.nickName}
                span ·
                span#user-city #{owner.addressBean.city}
            div.user-content
                div.info-item
                    span.info-key 作品集
                    span.info-value#user-collections #{owner.collectionCount}
                //- div.info-item
                    span.info-key 交易
                    span.info-value#user-trades 138
                //- div.info-item
                    span.info-key 评价
                    span.info-value#user-score 9.1
            div.user-contacts
                if owner.mobile
                    div.contact
                        div.icon#mobile
                        div.value #{owner.mobile}
                if owner.wechat
                    div.contact
                        div.icon#wechat
                        div.value #{owner.wechat}
                if owner.qq
                    div.contact
                        div.icon#qq
                        div.value #{owner.qq}
                if owner.email
                    div.contact
                        div.icon#email
                        div.value #{owner.email}

            //- div.info-signature #{owner.signature}
    div.profile-nav
        ul.nav
            li.avatar-wrap
                img.avatar(src="#{owner.avatar['30']}")
                div.avatar-name #{owner.nickName}
            //li
            //    if subTab == 'about'
            //        a.active(href="/profile/about/#{owner.userName}") 个人介绍
            //    else
            //        a(href="/profile/about/#{owner.userName}") 个人介绍
            li
                if subTab == 'index'
                    a.active(href="/profile/#{owner.userName}") 作品展示
                else
                    a(href="/profile/#{owner.userName}") 作品展示
            li
                if subTab == 'package'
                    a.active(href="/profile/package/#{owner.userName}") 套系预订
                else
                    a(href="/profile/package/#{owner.userName}") 套系预订
            li
                if subTab == 'trade'
                    a.active(href="/profile/trade/#{owner.userName}") 用户评价
                else
                    a(href="/profile/trade/#{owner.userName}") 用户评价